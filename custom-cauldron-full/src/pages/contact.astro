---
import Layout from '../components/Layout.astro';
---
<Layout>
  <section class="max-w-xl mx-auto">
    <h2 class="text-3xl font-bold mb-4">Contact Us</h2>
    <form name="contact" method="POST" data-netlify="true">
      <input type="hidden" name="form-name" value="contact" />
      <label class="block mb-2">Name <input type="text" name="name" class="w-full p-2 border" required /></label>
      <label class="block mb-2">Email <input type="email" name="email" class="w-full p-2 border" required /></label>
      <label class="block mb-2">Message <textarea name="message" class="w-full p-2 border" rows="4"></textarea></label>
      <button type="submit" class="bg-black text-white py-2 px-4 rounded mt-2">Send</button>
    </form>
  </section>
</Layout>
